<UserControl x:Class="zzz_MVVM_WPF_Multiple_Ms_Vs_VMs.Views.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:zzz_MVVM_WPF_Multiple_Ms_Vs_VMs.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Vertical">

        <Border>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="This Game"/>
                <TextBlock Text="Name"/>
                <TextBlock x:Name="Name" Text="{Binding Path=Name}"/>
                <TextBlock Text="World"/>
                <TextBlock x:Name="World" Text="{Binding Path=MyWorld.Name}"/>
                <Button Content="Change Name" Command="{Binding Path=ChangeNameCommand}" />
            </StackPanel>
        </Border>

        <Border>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="My World"/>
                <local:WorldV/>
            </StackPanel>
        </Border>

    </StackPanel>

</UserControl>
