<UserControl x:Class="zzz_MVVM_WPF_Multiple_Ms_Vs_VMs.Views.WorldV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:zzz_MVVM_WPF_Multiple_Ms_Vs_VMs.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <StackPanel Orientation="Vertical">

        <Border>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Name"/>
                <TextBlock x:Name="Name" Text="{Binding Path=Name}"/>
                <TextBlock Text="Selected Station"/>
                <TextBlock x:Name="SelectedStation" Text="{Binding Path=SelectedStation.Name}"/>
                <TextBlock Text="Stations Amt."/>
                <TextBlock x:Name="StationsAmt" Text="{Binding Path=Stations.Count}"/>
                <Button Content="Change Name" Command="{Binding Path=ChangeNameCommand}"/>
            </StackPanel>
        </Border>

        <Border>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Selected Station"/>
                <local:Station/>
            </StackPanel>
        </Border>

    </StackPanel>

</UserControl>
